<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dragos.userdatamonitor.MainActivity"
    android:orientation="vertical"
    android:background="@color/whitiBlue">

    <!--<EditText-->
        <!--android:id="@+id/inputIPAddress"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="300px"-->
        <!--android:hint="@string/input_ip"/>-->

    <TextView
        android:text="@string/whitiLogo"
        android:textColor="@color/whitiWhite"
        android:layout_gravity="center"
        android:textSize="200dp"
        android:layout_width="wrap_content"
        android:layout_height="250dp" />

    <Button
        android:text="@string/save"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="save"
        android:background="@color/whitiWhite"
        android:textColor="@color/whitiBlue"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"/>

    <Button
        android:text="@string/browse"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="browse"
        android:background="@color/whitiWhite"
        android:textColor="@color/whitiBlue"
        android:layout_gravity="center"/>


</LinearLayout>
